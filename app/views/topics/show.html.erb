<div class="row justify-content-center">
  <div class="col-auto" tabindex="0" data-bs-toggle="tooltip"
       data-bs-title="<%= @flashcards.empty? ? 'Please create at least one flashcard to start a quiz.' : '' %>" data-bs-placement="right">
    <%= link_to "Start Quiz", quiz_topic_path(@topic),
        class: "btn btn-primary btn-xlg #{'disabled' if @flashcards.empty?}" %>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="list-item">
      <%= render @topic %>

      <div>
        <%= link_to "Edit", edit_topic_path(@topic), class: "btn btn-primary" %>

        <%= link_to "Delete", @topic, method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to destroy this topic?"} %>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="list-item">
      <h2>Flashcards</h2>

      <ul>
        <% @flashcards.each do |flashcard| %>
          <li>
            <%= flashcard.question %>
            <%= link_to 'Edit', edit_topic_flashcard_path(@topic, flashcard) %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Show / Create / Update flashcards", topic_flashcards_path(@topic), class: "btn btn-primary" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col">
    <%= link_to "Back to Topics", topics_path, class: "btn btn-secondary" %>
  </div>
</div>
